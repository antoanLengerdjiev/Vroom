@model Vroom.Models.CreateBikeViewModel
@using Vroom.Extensions
<br />
<h2 class="text-info">View Page</h2>
<form action="Edit" enctype="multipart/form-data" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled"  asp-for="Bike.MakeId" asp-items="Model.Makes" class="form-control" id="makeSelect"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled"  asp-for="Bike.ModelId" asp-items="Model.Models" class="form-control" id="modelSelect"></select> 
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Year"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Year" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Mileage"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Mileage" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Price"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Price" class="form-control" />
        </div>
        <div class="col-1">
            <label asp-for="Bike.Currency"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectItemsList()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Features"></label>
        </div>
        <div class="col-4">
            <textarea disabled="disabled" asp-for="Bike.Features" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Seller.UserName"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Seller.UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Seller.Email"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Seller.Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Seller.PhoneNumber"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Seller.PhoneNumber" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>

